{
  "manifest_version": 2,

  "name": "PlayShop",
  "description": "All you need to shop for games in one place",
  "version": "1.0",
  
   "icons": {
     "16": "icons/ps16.png",
     "22": "icons/ps24.png",
     "32": "icons/ps32.png",
     "48": "icons/ps48.png",
     "64": "icons/ps64.png",
     "128": "icons/ps128.png"     
 },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "/html/popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
